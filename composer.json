{
    "name": "keboola/artifacts",
    "type": "library",
    "description": "Library for working with artifacts in Job Runner",
    "keywords": [
        "keboola",
        "artifacts",
        "job",
        "queue"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "keboola/job-queue-internal-api-php-client": "^10.7",
        "keboola/storage-api-client": "^13.1",
        "symfony/filesystem": "^5.4",
        "symfony/finder": "^5.4"
    },
    "require-dev": {
        "keboola/coding-standard": "^13.0.0",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^1.5.0",
        "phpstan/phpstan-phpunit": "^1.0.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Keboola\\Artifacts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\Artifacts\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap tests/bootstrap.php --fail-on-warning --stop-on-failure tests",
        "phpstan": "phpstan analyse ./src ./tests --level=max --memory-limit=-1 --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "cs": [
            "@phplint",
            "@phpcs",
            "@phpstan"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
