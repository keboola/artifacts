{
    "name": "keboola/artifacts",
    "type": "library",
    "description": "Library for working with artifacts in Job Runner",
    "keywords": [
        "keboola",
        "artifacts",
        "job",
        "queue"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "keboola/php-temp": ">=1.0",
        "keboola/storage-api-client": "^14.0",
        "keboola/storage-api-php-client-branch-wrapper": "^3.0",
        "symfony/filesystem": "^5.4|^6.2",
        "symfony/finder": "^5.4|^6.2"
    },
    "require-dev": {
        "keboola/coding-standard": ">=14.0",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-symfony": "^1.2",
        "phpunit/phpunit": "^9.5",
        "sempro/phpunit-pretty-print": "^1.4",
        "symfony/dotenv": "^5.4|^6.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Keboola\\Artifacts\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\Artifacts\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "ci": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ]
    },
    "config": {
        "sort-packages": true,
        "lock": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
